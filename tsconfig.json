{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "newLine": "lf",
        "outDir": "dist",
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules"],
	"include": ["src"]
}
